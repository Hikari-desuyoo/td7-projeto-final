<h1><%= "#{t('feedback.common.youre_avaliating')} #{receiver_name}" %></h1>

<% form_id = "#{feedback_for.class.name.downcase}_feedback_form" %>

<%= form_with(model: feedback, id: form_id) do |f| %>
  <div>
    <%= f.label :score %>
    <%= f.number_field :score, in: 1..5, step: 1 %>
  </div>
  <div>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>
  <%= f.submit t('common.submit') %>
<% end %>