<h2><%= @worker.get_full_name %></h2>

<% if @show_favorite_button %>
    <%= 
    link_to t('favorites.favorite_button'), 
    favorite_favorited_worker_path(@worker.id), 
    id: 'favorite_button',
    method: :post
    %>
<% elsif @show_unfavorite_button %>
    <%= 
    link_to t('favorites.unfavorite_button'), 
    unfavorite_favorited_worker_path(@worker.id), 
    id: 'unfavorite_button',
    method: :delete
    %>
<% end %>

<div id="average_score">
    <%= @worker_average_score %>
</div>

<% if @feedback %>
    <%= render partial: 'feedbacks/yours', locals: { feedback: @feedback } %>
<% end %>

<div id='worker_details'>
    <h3><%= @worker.description %></h3>
</div>